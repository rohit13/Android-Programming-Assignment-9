<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sharm_000.homework4.MovieFragment">

    <TextView
        android:id="@+id/movieName"
        android:layout_alignParentLeft="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:textColor="@color/colorAccent"
        android:singleLine="false"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_below="@+id/movieName"/>
        <!--style="?android:attr/ratingBarStyleSmall"-->
    <TextView
        android:id="@+id/textRating"
        android:typeface="sans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ratingBar"
        android:layout_below="@id/movieName"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgView3"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:paddingLeft="0dp" />
    <TextView
        android:id="@+id/cast"
        android:text="Cast:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textColor="@color/colorTextPrimary"
        android:layout_toRightOf="@id/imgView3"/>
    <TextView
        android:id="@+id/stars"
        android:typeface="sans"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:width="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:textSize="12dp"
        android:layout_below="@id/cast"
        android:layout_toRightOf="@id/imgView3"/>
    <TextView
        android:id="@+id/director"
        android:text="Director:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgView3"
        android:textColor="@color/colorTextPrimary"
        android:layout_below="@id/stars"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/directorName"
        android:typeface="sans"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:width="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:textSize="12dp"
        android:layout_below="@id/director"
        android:layout_toRightOf="@id/imgView3"/>
    <TextView
        android:id="@+id/desc"
        android:typeface="sans"
        android:layout_below="@id/imgView3"
        android:textSize="12dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:textColor="@color/colorTextPrimary"
        android:singleLine="false"
        />

</RelativeLayout>
